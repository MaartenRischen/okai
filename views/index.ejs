<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OkAi - Your Second Brain</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container-fluid mt-5">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar px-3 mb-4" id="sidebar-folders">
        <div class="sidebar-sticky">
          <h5 class="mt-3">Folders</h5>
          <ul class="nav flex-column" id="folder-list">
            <li class="nav-item"><a class="nav-link active" href="#" data-folder="all">All Conversations</a></li>
            <!-- Folders will be injected here -->
          </ul>
        </div>
      </nav>
      <!-- End Sidebar -->

      <main class="col-md-9 col-lg-10 ms-sm-auto px-4">
        <header class="text-center mb-5">
          <h1>OkAi</h1>
          <p class="lead">Your AI-powered Second Brain</p>
        </header>

        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4">
              <div class="card-header">
                <h2 class="h5 mb-0">What's on your mind?</h2>
              </div>
              <div class="card-body">
                <form id="note-form">
                  <div class="mb-3">
                    <textarea class="form-control" id="note-content" name="content" rows="4" placeholder="Type anything - ideas, tasks, thoughts..." required autofocus></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Save Note</button>
                </form>
              </div>
            </div>

            <!-- Import Section -->
            <div class="card mb-4">
              <div class="card-header">
                <h2 class="h5 mb-0">Import Chat History</h2>
              </div>
              <div class="card-body">
                <form id="chatgpt-import-form">
                  <div class="mb-3">
                    <label for="chatgptFile" class="form-label">ChatGPT Export (conversations.json or zip)</label>
                    <input class="form-control" type="file" id="chatgptFile" name="chatgptFile" accept=".json, .zip" required>
                  </div>
                  <button type="submit" class="btn btn-secondary">Import ChatGPT</button>
                </form>
                <!-- Placeholder for Gemini Import Form -->
                <form id="gemini-import-form" class="mt-3">
                  <div class="mb-3">
                    <label for="geminiFile" class="form-label">Gemini Export (Not yet implemented)</label>
                    <input class="form-control" type="file" id="geminiFile" name="geminiFile" disabled>
                  </div>
                  <button type="submit" class="btn btn-secondary" disabled>Import Gemini</button>
                </form>
                <div id="import-status" class="mt-3"></div>
              </div>
            </div>
            <!-- End Import Section -->

            <!-- Grouped Conversation List -->
            <div id="grouped-conversation-list">
              <div class="text-muted">Loading conversations...</div>
            </div>
            <!-- End Grouped Conversation List -->

          </div>

          <div class="col-md-6">
            <div class="card">
              <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="h5 mb-0">Your Notes</h2>
                <div>
                  <button class="btn btn-outline-secondary btn-sm" id="refresh-notes">Refresh</button>
                </div>
              </div>
              <div class="card-body">
                <div id="notes-container">
                  <% if (notes && notes.length > 0) { %>
                    <% notes.forEach(note => { %>
                      <div class="note-card mb-3 p-3 border rounded">
                        <p class="note-content mb-2"><%= note.content %></p>
                        <small class="text-muted">
                          <%= new Date(note.createdAt).toLocaleString() %>
                        </small>
                      </div>
                    <% }); %>
                  <% } else { %>
                    <p class="text-center text-muted">No notes yet. Add your first note!</p>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Full ChatGPT Conversation Section -->
        <div class="card mb-4" id="full-chathistory-card" style="display:none;">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0" id="full-chathistory-title">Conversation</h2>
            <button class="btn btn-sm btn-outline-secondary" id="close-chathistory">Close</button>
          </div>
          <div class="card-body p-0" id="full-chathistory-container" style="height: 60vh; overflow-y: auto; background: #f8f9fa;">
            <div class="text-muted">Select a conversation to view its full history.</div>
          </div>
        </div>
        <!-- End Full ChatGPT Conversation Section -->
      </main>
    </div>
  </div>

  <footer class="mt-5 text-center text-muted">
    <p>OkAi &copy; <%= new Date().getFullYear() %></p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
</body>
</html> 